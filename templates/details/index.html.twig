{% if detailsCard %}
    {% for item in detailsCard %}
        <div class='detail--back'>
            <button id="back"><i class="fa-solid fa-arrow-left"></i></button>
            <p class='tag' style='border-color: {{ item.typeColor }}; background-color: {{ item.typeColor }}20'>{{ item.typeName }}</p>
        </div>

        <div class='detail--title'>
            <h2>{{ item.card.getCrdTitle() }}</h2>
            <div class="detail--title--under">
                <div class="time_left">
                    <i class="fa-solid fa-hourglass-half" style="color:{{ item.timeColor }}"></i>
                    <p class="days">Dans <br> <span>{{ item.card.getTimeLeft }}</span></p>
                </div>
            </div>
        </div>

        <div class='detail--content'>
            <div class='detail--content--time'>
                <div class='detail--content--time--left detail--content--format'>
                    <p><i class="fa-solid fa-calendar-days"></i> Date</p>
                    {% if item.card.getCrdFrom %}
                        <p>Du {{ item.card.getFormattedCrdFrom }}</p>
                        <p>Au {{ item.card.getFormattedCrdTo }}</p>
                    {% else %}
                        <p>Le {{ item.card.getFormattedCrdTo }}</p>
                    {% endif %}
                </div>
                <div class='detail--content--time--right detail--content--format'>
                    <button><i class="fa-solid fa-pen"></i>Modifier</button>
                    <button><i class="fa-solid fa-flag"></i></button>
                </div>
            </div>
            <div class='detail--content--subject detail--content--format'>
                <p><i class="fa-solid fa-book"></i>Mati√®re</p>
                <p>{{ item.subjectName }}</p>
            </div>
            <div class='detail--content--description detail--content--format'>
                <p><i class="fa-solid fa-paragraph"></i> Description</p>
                <p>{{ item.card.getCrdDesc }}</p>
            </div>
            <div class='detail--content--links detail--content--format'>
                <p><i class="fa-solid fa-link"></i> Liens</p>
                <p style="color:red;">A FAIRE</p>
            </div>
            <div class='detail--content--done'>
                <i class="fa-regular fa-square-check"></i>
                <p>Rendu</p>
            </div>
        </div>
    {% endfor %}
{% endif %}
