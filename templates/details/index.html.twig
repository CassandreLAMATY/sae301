{% if detailsCard %}
    {% for item in detailsCard %}
        <div class='detail--back'>
            <button class='btn--darker btn--close-menu' id="back"><i class="fa-solid fa-arrow-right-long"></i></button>
            <p class='tag'
               style='border-color: {{ item.typeColor }}; background-color: {{ item.typeColor }}20'>{{ item.typeName }}</p>
        </div>

        <div>
            <h2>{{ item.card.getCrdTitle() }}</h2>
            <div class="time">
                <div class="time_left">
                    <i class="fa-solid fa-hourglass-half" style="color:{{ item.timeColor }}"></i>
                    <p class="days">Dans <br> <span>{{ item.card.getTimeLeft }}</span></p>
                </div>
            </div>
        </div>

        <div class='detail--content {{ item.card.getIsValidated() ? '' : 'notvalidated' }}'
             style='border-left: solid 6px {{ item.typeColor }};'>
            <div class='detail--content--time'>
                <div class='detail--content--time--left detail--content--format'>
                    <p class='detail--content--format-t'><i class="fa-solid fa-calendar-days"></i> Date</p>
                    {% if item.card.getCrdFrom %}
                        <p>Du {{ item.card.getFormattedCrdFrom }}</p>
                        <p>Au {{ item.card.getFormattedCrdTo }}</p>
                    {% else %}
                        <p>Le {{ item.card.getFormattedCrdTo }}</p>
                    {% endif %}
                </div>
                <div class='detail--content--time--right double-button'>
                    <button class='double-button__item modify-event' id="modify-event"><i class="fa-solid fa-pen"></i>Modifier
                    </button>
                    <button class='double-button__item signalement'><i class="fa-solid fa-flag"></i></button>
                </div>
            </div>
            {% if item.subjectName %}
                <div class='detail--content--subject detail--content--format'>
                    <p class='detail--content--format-t'><i class="fa-solid fa-book modify-button"></i>Mati√®re</p>
                    <p class='detail--content--format-c'>{{ item.subjectRef }} - {{ item.subjectName }}</p>
                </div>
            {% endif %}
            {% if item.card.getCrdDesc %}
                <div class='detail--content--description detail--content--format'>
                    <p class='detail--content--format-t'><i class="fa-solid fa-paragraph"></i> Description</p>
                    <p class='detail--content--format-c'>{{ item.card.getCrdDesc }}</p>
                </div>
            {% endif %}
            <div class='concatinated-btns btns--a-valider'>
                <div class='btns--a-valider--counter'>{{ item.validationNumber }}/5 <i class="fa-solid fa-user-check"></i></div>
                <button card-id={{ item.card.getCrdId() }} class='btn--a-valider btns--a-valider-details {% if item.didUserValidate %}disabledSelect{% endif %} {% if item.card.getIsValidated() %}disabledSelect{% endif %}'>
                    Valider
                    <i class="fa-regular fa-square"></i>
                    {#
                    <i class="fa-solid fa-arrow-right-long"></i>
                    <i class="fa-regular fa-square-check"></i>
                    #}
                </button>
            </div>
            {#
            <button class="btn--a-faire">
                A faire
                <i class="fa-regular fa-square"></i>
            </button>
            <button class="btn--fait">
                Fait
                <i class="fa-regular fa-square-check"></i>
            </button>
            #}
        </div>
    {% endfor %}
{% endif %}
